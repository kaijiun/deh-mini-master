<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_map">

    <RelativeLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <fragment
            android:id="@+id/google_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_change_location"
            android:layout_above="@+id/button_search_address"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_insert_photo_cyan_700_24dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_search_address"
            android:layout_above="@+id/button_search_range"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_address" />

        <ToggleButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_search_range"
            android:layout_above="@+id/button_blank"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_public_cyan_700_24dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_blank"
            android:layout_marginBottom="108dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_search_center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/ic_menu_add"
            android:clickable="false"/>

    </RelativeLayout>
</RelativeLayout>
